SELECT * FROM STUDENT;
SELECT * FROM STUDENT_INFO;

SELECT * FROM STUDENT JOIN STUDENT_INFO;

UPDATE STUDENT_INFO SET TOTAL_SCORE = ENGLISH_SCORE+MATH_SCORE+CHINESE_SCORE+COMPREHENSIVE_SCORE;

